<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_asset_page_tabs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creditangelteam.creditangel.AssetPageTabs"
    android:background="@drawable/background_color">
    <ImageView
        android:id="@+id/add_btn"
        android:translationZ="100px"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="32px"
        android:layout_marginBottom="32px"
        android:src="@drawable/ic_plus"
        android:onClick="OnClickForAccountingPage"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/page_analysis">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="16px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="320px"
                    android:layout_weight="2"
                    android:background="@drawable/background_grid">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="#AAAAFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="100px"
                                android:layout_height="100px"
                                android:layout_marginTop="36px"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_calendar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10月"
                                android:textSize="40px"
                                android:layout_marginTop="16px"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="16px"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:layout_marginTop="10px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="根據分析, 到今日為止, 您的累積金額低於平均值, 請至消費分析頁面了解您的支出狀況與改進方式 "/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_marginRight="16px"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="累積收入分析"/>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_marginTop="0px"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="您"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"/>
                                    <ProgressBar
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:max="24000"
                                        android:progress="15600"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"/>
                                    <TextView
                                        android:layout_marginTop="0px"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="NTD 15600"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_marginTop="0px"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="大眾"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"/>
                                    <ProgressBar
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:max="24000"
                                        android:progress="19200"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"/>
                                    <TextView
                                        android:layout_marginTop="0px"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="NTD 19200"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:onClick="OnClickForViewAsset"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_marginTop="16px"
                    android:background="@drawable/background_grid">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" android:background="#FFAAAA">
                        <ImageView
                            android:layout_width="130px"
                            android:layout_height="130px"
                            android:layout_marginTop="10px"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_cry_angel_new3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12號"
                            android:textSize="36px"
                            android:layout_marginTop="0px"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="16px"
                        android:layout_marginLeft="16px"
                        android:layout_marginTop="16px"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日進帳: NTD 550"/>
                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="今天的開銷太多囉, 快去查看明細, 了解你的開銷吧!"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>

                        <LinearLayout
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="夢想累積: "/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-0.5"
                                android:textColor="#FF0000"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" 天"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_marginTop="16px"
                    android:background="@drawable/background_grid">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" android:background="#AAFFAA">
                        <ImageView
                            android:layout_width="130px"
                            android:layout_height="130px"
                            android:layout_marginTop="10px"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_happy_angel"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11號"
                            android:textSize="36px"
                            android:layout_marginTop="0px"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="16px"
                        android:layout_marginLeft="16px"
                        android:layout_marginTop="16px"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日進帳: NTD 1850"/>
                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="哇, 今天吃飯比平常還要便宜喔! 省了不少錢呢!"/>
                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="離夢想又更近了呢!"/>

                        <LinearLayout
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="夢想累積: "/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+0.2"
                                android:textColor="#00FF00"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" 天"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_marginTop="16px"
                    android:background="@drawable/background_grid">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" android:background="#AAFFAA">
                        <ImageView
                            android:layout_width="130px"
                            android:layout_height="130px"
                            android:layout_marginTop="10px"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_happy_angel"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10號"
                            android:textSize="36px"
                            android:layout_marginTop="0px"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="16px"
                        android:layout_marginLeft="16px"
                        android:layout_marginTop="16px"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日進帳: NTD 1350"/>
                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="不錯喔, 夢想又更進一步了"/>

                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>

                        <LinearLayout
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="夢想累積: "/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+0.1"
                                android:textColor="#00FF00"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" 天"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_marginTop="16px"
                    android:background="@drawable/background_grid">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" android:background="#AAFFAA">
                        <ImageView
                            android:layout_width="130px"
                            android:layout_height="130px"
                            android:layout_marginTop="10px"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_happy_angel"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9號"
                            android:textSize="36px"
                            android:layout_marginTop="0px"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="16px"
                        android:layout_marginLeft="16px"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日進帳: NTD 1440"/>
                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="不錯喔, 夢想又更進一步了"/>

                        <TextView
                            android:layout_marginTop="16px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>

                        <LinearLayout
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="夢想累積: "/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+0.1"
                                android:textColor="#00FF00"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" 天"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page_asset"
        android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16px">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="320px"
                    android:layout_weight="2"
                    android:background="@drawable/background_grid">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="#AAAAFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="100px"
                                android:layout_height="100px"
                                android:layout_marginTop="36px"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_calendar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10月"
                                android:textSize="40px"
                                android:layout_marginTop="16px"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="16px"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="16px">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pageEat"
                android:visibility="visible"
                android:background="@drawable/background_grid">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小天使分析最理想的消費習慣" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200px">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="100px"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_recipe"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="理想的花費: NTD 3000"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="55px"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您的花費:     NTD 5000"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="55px"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="      超出理想的範圍囉\n              看看其他人都怎麼消費"/>
                        <Button
                            android:layout_marginLeft="20px"
                            android:text="前往"
                            android:layout_width="130px"
                            android:layout_height="80px"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="normal|"
                            android:fontFamily="sans-serif"
                            android:visibility="visible"
                            android:clickable="true"
                            android:background="#AFAFAF"
                            android:textColor="@color/cardview_light_background"
                            android:onClick="OnClickForEatSuggestion"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pageWear"
                android:background="@drawable/background_grid">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小天使分析最理想的消費習慣" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200px">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="100px"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_coat"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="理想的花費: NTD 1000"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="55px"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您的花費:     NTD 1500"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="55px"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="      超出理想的範圍囉\n              看看其他人都怎麼消費"/>
                        <Button
                            android:layout_marginLeft="20px"
                            android:text="前往"
                            android:layout_width="130px"
                            android:layout_height="80px"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="normal|"
                            android:fontFamily="sans-serif"
                            android:visibility="visible"
                            android:clickable="true"
                            android:background="#AFAFAF"
                            android:textColor="@color/cardview_light_background" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
